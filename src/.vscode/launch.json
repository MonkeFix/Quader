    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Quader",
            "cargo": {
                "args": [
                    "build",
                    "--bin=quader",
                    "--package=quader"
                ],
                "filter": {
                    "name": "quader",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug web_api",
            "cargo": {
                "args": [
                    "build",
                    "--bin=web_api",
                    "--package=web_api"
                ],
                "filter": {
                    "name": "web_api",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug server",
            "cargo": {
                "args": [
                    "build",
                ],
                "filter": {
                    "name": "server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/server"
        }
    ]
}